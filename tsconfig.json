{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
    "@/*": ["./*"],
      "@shared": ["./core/shared"],
      "@core/*": ["./core/*"],
      "@adapter": ["./adapter"],
      "@context": ["./src/context"],
      "@screen": ["./src/screens"],
      "@hooks": ["./src/hooks"],
      "@services/*": ["./src/services/*"],
      "@config/*":["./src/config/*"],
      "tailwind.config": ["./tailwind.config.js"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
