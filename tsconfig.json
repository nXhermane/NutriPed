{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@shared": ["./core/shared"],
      "@core/*": ["./core/*"],
      "@adapter": ["./adapter"],
      "@context": ["./src/context"],
      "@pages/*": ["./components/pages/*"],
      "@hooks": ["./src/hooks"],
      "@constants": ["./src/constants"],
      "@services/*": ["./adapter/services/*"],
      "@config/*": ["./adapter/config/*"],
      "tailwind.config": ["./tailwind.config.js"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
